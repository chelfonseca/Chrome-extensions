{
    "manifest_version": 3,
    "name": "Pop up",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                   "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {              
          "16": "bt.png" 
        },
        "default_title": "A popup will come here",   
        "default_popup": "popup.html"  
      }
}